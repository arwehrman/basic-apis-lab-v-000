<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @repos %>
    <ul>
    <% @repos.each do |repo| %>
      <li>
        <%= repo["name"] %><br>
        <%= repo["description"] %><br>
         <%= link_to("#{result["html_url"]}",result["html_url"]) %> <br>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
