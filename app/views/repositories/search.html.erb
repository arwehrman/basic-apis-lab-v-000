<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @repos %>
    <ul>
    <% @repos.each do |repo| %>
      <li>
        <%= repo["name"] %><br>
        <%= repo["location"]["address"] %><br>
        Checkins: <%= repo["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
